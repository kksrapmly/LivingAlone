<section class="userEditpage"> 
  <div class="container">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-1"></div>
      <div class="col-md-6">
        <h2 class="userEditpage_title">プロフィール編集</h2>
        
        <p class="flashmessage">
          <%= flash.now[:user] %>
        </p>

        <div class="form-body">
          <%= form_with(model: @user, local: true) do |f| %>
            
            <div class="userEditpage_field">
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "名前（ニックネーム可）" %>
            </div>

            <div class="userEditpage_field">
              <div class="form-group">
                <div class="form-check form-check-inline">
                  <%= f.radio_button :which, "借りる", class: "form-check-input", id: "whichRadio1" %>
                  <label class="form-check-label" for="whichRadio1">借りる</label>
                </div>
                <div class="form-check form-check-inline">
                  <%= f.radio_button :which, "貸したい", class: "form-check-input", id: "whichRadio2" %>
                  <label class="form-check-label" for="whichRadio2">貸したい</label>
                </div>
              </div>
            </div>

            <div class="userEditpage_field">
              <div class="form-group">
                <div class="form-check form-check-inline">
                  <%= f.radio_button :sex, "男", class: "form-check-input", id: "sexRadio1" %>
                  <label class="form-check-label" for="sexRadio1">男</label>
                </div>
                <div class="form-check form-check-inline">
                  <%= f.radio_button :sex, "女", class: "form-check-input", id: "sexRadio2" %>
                  <label class="form-check-label" for="sexRadio2">女</label>
                </div>
              </div>
            </div>

            <div class="uesrEditpage_field">
              <%= f.select :prefecture, User.prefectures.keys, {}, class: "form-control btn btn-info" %>
            </div>

            <div class="userEditpage_field">
              <label for="file_photo" class="rounded-circle userProfileImg">
                <div class="userProfileImg_description">プロフィール画像</div>
                <i class="fas fa-camera fa-3x"></i>
                <%= f.attachment_field :user_image, fallback: "no_image.jpg", id: "file_photo" %>
              </label>
            </div>

            <div class="userEditpage_field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
            </div>

            <div class="userEditpage_field">
              <%= f.text_area :introduction, maxlength: "500", rows: "10", autofocus: true, class: "form-control", placeholder: "自己紹介（１０文字以上５００文字以内）" %>
            </div>

            <div class="actions">
              <h3>
                <%= f.submit "プロフィールを更新する", class: "btn btn-success userEditpage_btn form-control" %>
              </h3>
            </div>
          <% end %>
        </div>
        
        <p class="userEditpage_destroy">
          ※ 退会すると登録したデータが全て消えてしまいます。
        </p>
        <h3>
          <%= link_to "退会する", user_path(@user.id), method: :delete, class: "btn btn-danger userEditpage_btn1 form-control", "data-confirm" => "退会すると【あなたの情報が全て失われてしまいます】がよろしいですか？" %>
        </h3>
      </div>

      <div class="col-md-1"></div>
      <div class="col-md-2"></div>
    </div>
  </div>
</section>