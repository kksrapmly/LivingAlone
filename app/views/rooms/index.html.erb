<section class="roomIndexpage">
  <div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <h2 class="roomIndexpage_title">メッセージ一覧</h2>

        <table class="table table-hover">
          <tr>
            <th></th>
            <th></th>
          </tr>

          <% @rooms.each do |room| %>
            <tr>
              <td>
                <% if room.target_user(current_user).present? %>
                  <%= link_to room.target_user(current_user).name, room_talks_path(room) %>
                <% end %>
              </td>
              <td></td>
            </tr>
          <% end %>
        </table>

      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</section>